#header
    nav.navbar.navbar-dark.bg-dark.justify-content-between
        a.navbar-brand(href="/app") DiaLOG
        .d-inline
            a.btn.btn-secondary.my-2.my-sm-0(href="/logout") Logout

.d-flex.flex-row.h-view
    #groups.h-100
        ul.nav.flex-column.navbar-light.bg-light.h-100.border-right.text-nowrap.nav-pills.p-2
            li.nav-item.action-button.static
                a.nav-link.mb-1.btn-secondary(href="#") Create Group
    #channels.h-100
        ul.nav.flex-column.navbar-light.bg-light.h-100.border-right.text-nowrap.nav-pills.p-2
            li.nav-item.action-button.static
                a.nav-link.mb-1.btn-secondary(href="#") Create Channel
    #view.w-100.h-100.position-relative.d-flex.flex-column
        nav.navbar.w-100.navbar-light.bg-light.border-bottom
            form#message-form.form-inline(action="" method="POST")
                input.form-control.mr-sm-2(type='text' placeholder='Message' name='message')
                button.btn.btn-primary.my-2.my-sm-0(type='submit') Send
        .messages.h-100.overflow-auto
            .list-group.list-group-flush
