#createChannelModal.modal.fade(tabindex='-1' role='dialog')
    .modal-dialog.modal-dialog-centered(role='document')
        form.modal-content.ajaxForm.loginForm(method="POST" action="/api/channels")
            .modal-header
                h5#createChannelModalLongTitle.modal-title Create a Channel
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
                .form-group
                    label(for='channelNameInput') Channel Name
                    input#channelNameInput.form-control(type='text' name="name" placeholder='Channel name')
                .form-group
                    label(for='channelDescriptionInput') Description
                    input#channelDescriptionInput.form-control(type='text' name="description" placeholder='Description')
            .modal-footer
                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                button.btn.btn-primary(type='submit') Submit
